<Window x:Class="KinectSpaceToWindowCoords.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        Height="550" 
        Width="900"
        WindowState="Maximized" WindowStyle="None">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>      
        <Grid Name="browserContainer" Loaded="browserContainer_Loaded" Grid.ColumnSpan="2"></Grid>
        <MediaElement Name="player" Source="swipe.mp3" Visibility="Hidden"/>
        <MediaElement Name="player2" Source="page.mp3" Visibility="Hidden"/>
        <MediaElement Name="player3" Source="push.mp3" Visibility="Hidden"/>
    </Grid>
</Window>
